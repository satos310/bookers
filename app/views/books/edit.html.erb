<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  
<%= form_with model: @book do |f| %>
  <div class="field">
    <%= f.label "Title" %><br>
    <%= f.text_field :title %>
  </div>
    
  <div class="field">
    <%= f.label "Body" %><br>
    <%= f.text_area :body %>
  </div>
    
  <div class="botton">
    <%= f.submit "Update Book" %>
  </div>
  
  <div class="page-move">
    <%= link_to "Show", book_path(@book.id) %>
    <%= "|" %>
    <%= link_to "Back", books_path %>
  </div>
<% end %>