<div class="books">
  <h1>Books</h1>
  <table>
    <thead>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </thead>
        
  ã€€<tbody>
      <%= @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to "show", book_path(book.id) %>
          </td>
            <%= link_to "edit", edit_book_path(book.id) %>
          <td>
            <%= link_to "destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you nuts?" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <h2>New Book</h2>
  <%= form_with model: Book.new do |f| %>
    <div class="field">
      <%= f.label "Title" %><br>
      <%= f.text_field :title %>
    </div>
    
    <div class="field">
      <%= f.label "Body" %><br>
      <%= f.text_area :body %>
    </div>
    
    <div class="botton">
      <%= f.submit "Create Book" %>
    </div>
  <% end %>
</div>
    
